<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.samit.utkarsh.ui.exam.ExamViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:weightSum="100"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14"
                    android:background="@color/purple"
                    android:paddingTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="Marathi"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"

                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:background="@color/purple"
                        android:paddingTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_horizontal"
                            android:text="Motha Shishu"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_10sdp"


                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_horizontal"
                            android:text="Second Unit Test"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_alignParentRight="true"

                            />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="86"
                    android:background="@drawable/rounded_corner_white_fill"
                    android:paddingTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="left"
                                android:text="Q.1 See the alphabet and tick the correct picture"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_10sdp"


                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/rounded_corner_gray_fill">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="left"
                                    android:text="1) K"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    />
                                <ImageView
                                    android:layout_width="@dimen/_200sdp"
                                    android:layout_height="@dimen/_130sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_marathi"/>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/rounded_corner_gray_border">


                                <RadioButton
                                    android:id="@+id/rbAns1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/rbAns1"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:gravity="left"
                                        android:text="Kite"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp" />

                                    <ImageView
                                        android:layout_width="@dimen/_200sdp"
                                        android:layout_height="@dimen/_130sdp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_marathi" />

                                </LinearLayout>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/rounded_corner_gray_border">


                                <RadioButton
                                    android:id="@+id/rbAns2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/rbAns2"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:gravity="left"
                                        android:text="Tree "
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp"
                                        android:layout_marginRight="@dimen/_5sdp"/>
                                    <ImageView
                                        android:layout_width="@dimen/_200sdp"
                                        android:layout_height="@dimen/_130sdp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_marathi"/>

                                </LinearLayout>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/rounded_corner_gray_border">

                                <RadioButton
                                    android:id="@+id/rbAns3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/rbAns3"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:gravity="left"
                                        android:text="Fan"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp"
                                        android:layout_marginRight="@dimen/_5sdp"/>

                                    <ImageView
                                        android:layout_width="@dimen/_200sdp"
                                        android:layout_height="@dimen/_130sdp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_marathi" />

                                </LinearLayout>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/rounded_corner_gray_border">

                                <RadioButton
                                    android:id="@+id/rbAns4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/rbAns4"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:gravity="left"
                                        android:text="Fan"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp"
                                        android:layout_marginRight="@dimen/_5sdp"/>

                                    <ImageView
                                        android:layout_width="@dimen/_200sdp"
                                        android:layout_height="@dimen/_130sdp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_marathi" />

                                </LinearLayout>

                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"></LinearLayout>
                        </LinearLayout>


                    </androidx.core.widget.NestedScrollView>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="4"
                android:gravity="bottom|center"
                android:layout_marginBottom="@dimen/_5sdp">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="Previous"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_corner_purple_fill"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="Finish"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_corner_purple_fill"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="Next"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_corner_purple_fill"
                    />


            </LinearLayout>
        </RelativeLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>





